<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16.dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPhoneModel"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8.dp"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/ic_edit"
                    android:layout_width="16.dp"
                    android:layout_height="16.dp"/>

                <ImageView
                    android:layout_marginHorizontal="16.dp"
                    android:src="@drawable/trash_solid"
                    android:layout_width="16.dp"
                    android:layout_height="16.dp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewPhoneUsers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:src="@drawable/photo" />
    </LinearLayout>

</androidx.cardview.widget.CardView>